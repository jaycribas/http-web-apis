extends header.pug
block content
    #subhead
      .wrap
        form(
          action='/newTweet' 
          method='POST'
        )
          input.tweet(
            type='text' 
            placeholder='Write a twit' 
            name='twit'
          )
          button.send(
            type='submit' 
            class='btn btn-default' 
            name='sendTwit'
          ) SEND TWIT

    ul.wrap
      each val in twit
        li= val.text
          form(
            action='/delete/' + val.id_str
            method='POST'
          )
            button(
              class='btn'
              type='submit') 
              i.fa.fa-trash(aria-hidden='true'
            )
